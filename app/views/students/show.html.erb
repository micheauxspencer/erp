<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %>: <%= @student.first_name + @student.last_name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd style="padding-top: 10px"><%= @student.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @student.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade) %>:</strong></dt>
  <dd><%= @student.grade ? @student.grade.name : '' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sin) %>:</strong></dt>
  <dd><%= @student.sin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birthdate) %>:</strong></dt>
  <dd><%= @student.birthdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trans_req) %>:</strong></dt>
  <dd><%= @student.trans_req %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax_rec_req) %>:</strong></dt>
  <dd><%= @student.tax_rec_req %></dd>
  <dt><strong><%= model_class.human_attribute_name(:route_id) %>:</strong></dt>
  <dd><%= @student.route.name if @student.route %></dd>
  <dt><strong><%= model_class.human_attribute_name(:route_fee) %>:</strong></dt>
  <dd><%= @student.route_fee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pick_up) %>:</strong></dt>
  <dd><%= @student.pick_up %></dd>
  <dt><strong><%= model_class.human_attribute_name(:drop_off) %>:</strong></dt>
  <dd><%= @student.drop_off %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sibling_id) %>:</strong></dt>
  <dd><%= @student.sibling_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:f_first_name) %>:</strong></dt>
  <dd><%= @student.f_first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:f_last_name) %>:</strong></dt>
  <dd><%= @student.f_last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:f_phone) %>:</strong></dt>
  <dd><%= @student.f_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:m_first_name) %>:</strong></dt>
  <dd><%= @student.m_first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:m_last_name) %>:</strong></dt>
  <dd><%= @student.m_last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:m_phone) %>:</strong></dt>
  <dd><%= @student.m_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @student.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emerg_1_name) %>:</strong></dt>
  <dd><%= @student.emerg_1_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emerg_1_phone) %>:</strong></dt>
  <dd><%= @student.emerg_1_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emerg_1_relation) %>:</strong></dt>
  <dd><%= @student.emerg_1_relation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emerg_2_name) %>:</strong></dt>
  <dd><%= @student.emerg_2_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emerg_2_phone) %>:</strong></dt>
  <dd><%= @student.emerg_2_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emerg_2_relation) %>:</strong></dt>
  <dd><%= @student.emerg_2_relation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:healthcard) %>:</strong></dt>
  <dd><%= @student.healthcard %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doctor_name) %>:</strong></dt>
  <dd><%= @student.doctor_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doctor_phone) %>:</strong></dt>
  <dd><%= @student.doctor_phone %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              students_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= render 'student_term' %>


<style>
    dl dt, dl dd {
        margin-top: 10px;
    }
</style>