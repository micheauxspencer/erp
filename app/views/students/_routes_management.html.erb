<div class="page-header">
  <h1> Student's Route </h1>
</div>

<% if @route %>

    <dl class="dl-horizontal">
      <dt><strong><%= Route.human_attribute_name(:name) %>:</strong></dt>
      <dd style="padding-top: 10px"><%= @route.name %></dd>
    </dl>

    <dl class="dl-horizontal">
      <dt><strong><%= Route.human_attribute_name(:details) %>:</strong></dt>
      <dd style="padding-top: 10px"><%= @route.details %></dd>
    </dl>

    <dl class="dl-horizontal">
      <dt><strong><%= Route.human_attribute_name(:status) %>:</strong></dt>
      <dd style="padding-top: 10px"><%= @route.status %></dd>
    </dl>
<% else %>
    <div class="row col-md-12" style=" margin-bottom: 50px;">
      <div class="btn btn-primary">
        New Route
      </div>

      <div class="btn btn-default" style="margin-left: 30px;">
        Find Route
      </div>
    </div>
<% end %>

