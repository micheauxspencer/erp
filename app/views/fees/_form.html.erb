<%= simple_form_for @fee, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="row">
      <div class="col-md-10">
        <%= f.input :name %>
        <%#= error_span(@fee[:name]) %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
        <%= f.input :amount %>
        <%#= error_span(@fee[:amount]) %>
      </div>
      <div class="col-md-2" style="margin-top: 28px; font-size: 1.5em; font-weight: bold">
        $
      </div>
    </div>

    <br>
    <div class="row">
      <%= f.select :term_id,
                   options_from_collection_for_select(Term.all, :id, :name),
                   { prompt: 'Select Term'}, { class: 'btn btn-default', style: 'padding: 8px 50px 8px 8px'} %>
    </div>

    <br>

    <div class="row">
      <div class="col-md-12" style="margin-left: -15px;">
        <%= f.button :submit, :class => 'btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    fees_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>
