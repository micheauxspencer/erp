<%- model_class = User -%>
<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String" >Staff List</Data></Cell>
      </Row>
       <Row>
        <Cell><Data ss:Type="String" >Total staffs: <%= @users.count %></Data></Cell>
      </Row>
      <Row>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:id) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:email) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:role) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:user_name) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:first_name) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:last_name) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:address) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:birth_date) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= model_class.human_attribute_name(:phone) %></Data></Cell>
      </Row>
    <% @users.each do |user| %>
      <Row>
        <Cell><Data ss:Type="String"><%= user.id %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.email %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.role %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.user_name %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.first_name %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.last_name %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.address %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.birth_date %></Data></Cell>
        <Cell><Data ss:Type="String"><%= user.phone %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>