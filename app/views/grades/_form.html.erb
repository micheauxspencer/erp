<%= simple_form_for @grade, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :acedemic_year_id, as: :select, :collection => AcedemicYear.all.collect {|p| [ p.year, p.id ]} %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), grades_path, :class => 'btn btn-default' %>
<% end %>
