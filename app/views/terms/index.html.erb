<%- model_class = Term -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:academic_year) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= link_to term.id, term_path(term) %></td>
        <td><%= term.name %></td>
        <td><%= term.acedemic_year.year if term.acedemic_year %></td>
        <td><%= term.start_date %></td>
        <td><%= term.end_date %></td>
        <td><%= term.status %></td>
        <td>
          <%= link_to 'Show',
                      term_path(term), :class => 'btn btn-default btn-xs' %>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_term_path(term), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      term_path(term),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_term_path,
            :class => 'btn btn-primary' %>
